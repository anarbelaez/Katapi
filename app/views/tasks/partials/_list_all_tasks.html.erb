 <% @tasks.each do |task| %>

<div class="list-group">

  <a href="#" class="list-group-item list-group-item-action rounded-4 bg-light my-1">
    <div class="d-flex w-100 justify-content-between">

      <h5 class="mb-1"> <%= task.name.capitalize %></h5>
      <small>Complete at:<%= task.due_date %></small>
    </div>
    <p class="mb-1"><%= task.description %></p>
    <small>Priority: <%= task.priority %></small>
  </a>

</div>
<% end %>
