<div class="row bg-secondary rounded-4 shadow-1 mx-4 p-2">
<div class="row d-md-block rounded-4 index-calendar">
  <%= month_calendar events: @tasks do |date, tasks| %>
  <div class="d-flex justify-content-end">
   <strong> <%= date.day %> </strong>
    </div>
      <% tasks.each do |task| %>
        <div class="bg-success mb-1 rounded-4 col-12 shadow-sm">
          <%= link_to task, class:"btn btn-white btn-sm" do %>
        <i class="bi bi-calendar4-event d-md-none"></i>
        <p class="d-none d-md-block" > <%= "#{title_stylized(task.name)}"%> </p>
          <% end %>
        </div>
    <% end %>
  <% end %>
</div>
</div>



<%= calendar number_of_days: 1, events: @tasks do |date, tasks| %>
  <%  date %>
    <% tasks.each do |task| %>
      <div>
      <%= link_to "Show this task", task %>
      <%= task.start_time %>
       <%= task.name %>
        <%= task.goal.name %>


      </div>
    <% end %>
<% end %>
