<div class="row row-cols-sm-1 row-cols-m-2  row-cols-lg-3" data-controller="sortable"
data-action="click->sortable#sortable"
id="results">

          <div class="col">
            <div class="row rounded-4 g-2 mb-3 bg-success text-dark bg-opacity-10">
              <div class="col-1 my-auto mx-auto d-flex align-items-center">
                <i class="fa-solid fa-circle-exclamation"></i>
              </div>
              <div class="col-10">
                  <p>TO-DO</p>
              </div>
            </div>
            <!-- data-action="event->controller-name#methodName -->



            <ul class="row rounded-4 g-2 mb-3 bg-success text-dark bg-opacity-10 d-flex justify-content-center"
            id="col-todo">

                <% @todo.each do |task| %>
                  <li data-task-id="<%=task.id %>"> <%= render 'tasks/partials/card_task', task: task %></li>
                <% end %>
          </ul>
          </div>

          <div class="col">
            <div class="row rounded-4 g-2 mb-3 bg-success text-dark bg-opacity-10">
              <div class="col-1 my-auto mx-auto d-flex align-items-center">
                <i class="fa-solid fa-list-check"></i>
              </div>
              <div class="col-10">
                 <p>DOING</p>
              </div>
            </div>
            <div class="row p-2 rounded-4 g-2 mb-3 bg-success text-dark bg-opacity-10">
              <ul class="row rounded-4 g-2 mb-3 bg-success text-dark bg-opacity-10 d-flex justify-content-center"
              id="col-doing">

              <% @doing.each do |task| %>
              <li data-task-id="<%=task.id %>"> <%= render 'tasks/partials/card_task', task: task %></li>
            <% end %>
            </ul>
            </div>
          </div>


          <div class="col">
            <div class="row rounded-4 g-2 mb-3 bg-success text-dark bg-opacity-10">
              <div class="col-1 my-auto mx-auto d-flex align-items-center">
                <i class="fa-solid fa-circle-check"></i>
              </div>
              <div class="col-10">
              <p>DONE</p>
              </div>
            </div>
            <div class="row p-2 rounded-4 g-2 mb-3 bg-success text-dark bg-opacity-10">
              <ul class="row rounded-4 g-2 mb-3 bg-success text-dark bg-opacity-10 d-flex justify-content-center"
              id="col-done">

              <% @done.each do |task| %>
              <li data-task-id="<%=task.id %>"> <%= render 'tasks/partials/card_task', task: task %></li>
            <% end %>
            </ul>
            </div>
          </div>

        </div>
