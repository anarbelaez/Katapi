<div class="row row-cols-sm-1 row-cols-m-2  row-cols-lg-3" data-controller="sortable"
  data-action="click->sortable#sortable" id="results">

  <div class="col">
    <div class="row rounded-4 g-2 mb-3 bg-success text-dark bg-opacity-10">
      <div class="col-1 my-auto mx-auto d-flex align-items-center">
        <i class="fa-solid fa-circle-exclamation"></i>
      </div>
      <div class="col-10">
        <p>TO-DO</p>
      </div>
    </div>

    <div class="row p-2 rounded-4 g-2 mb-3 bg-success text-dark bg-opacity-10 ">

      <ul class="row p-0 rounded-4 g-2 mb-3  text-dark bg-opacity-10 d-flex
                        justify-content-center list-unstyled" id="col-todo" data-status="not_started">
        <% @todo.each do |task| %>
          <li class="pl-0 d-flex justify-content-center" data-task-id="<%=task.id %>">
            <%= render 'tasks/partials/card_task' , task: task %>
          </li>
          <% end %>
      </ul>
    </div>

  </div>

  <div class="col">
    <div class="row rounded-4 g-2 mb-3 bg-success text-dark bg-opacity-10">
      <div class="col-1 my-auto mx-auto d-flex align-items-center">
        <i class="fa-solid fa-list-check"></i>
      </div>
      <div class="col-10">
        <p>DOING</p>
      </div>
    </div>
    <div class="row p-2 rounded-4 g-2 mb-3 bg-success text-dark bg-opacity-10">
      <ul class="row rounded-4 g-2 mb-3 text-dark bg-opacity-10
                d-flex justify-content-center list-unstyled" id="col-doing" data-status="in_progress">
        <% @doing.each do |task| %>
          <li class="pl-0 d-flex justify-content-center" data-task-id="<%=task.id %>">
            <%= render 'tasks/partials/card_task' , task: task %>
          </li>
          <% end %>
      </ul>
    </div>
  </div>


  <div class="col">
    <div class="row rounded-4 g-2 mb-3 bg-success text-dark bg-opacity-10">
      <div class="col-1 my-auto mx-auto d-flex align-items-center">
        <i class="fa-solid fa-circle-check"></i>
      </div>
      <div class="col-10">
        <p>DONE</p>
      </div>
    </div>
    <div class="row p-2 rounded-4 g-2 mb-3 bg-success text-dark bg-opacity-10">
      <ul class="row rounded-4 g-2 mb-3 text-dark bg-opacity-10
                        d-flex justify-content-center list-unstyled" id="col-done" data-status="done">
        <% @done.each do |task| %>
          <li class="pl-0 d-flex justify-content-center" data-task-id="<%=task.id %>">
            <%= render 'tasks/partials/card_task' , task: task %>
          </li>
          <% end %>
      </ul>
    </div>
  </div>

</div>
