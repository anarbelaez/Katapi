<div class="col-12 px-2 d-flex">
  <div class="col-9 me-2">

    <%= link_to task_path(task), class: "text-decoration-none" do %>
      <div class="card bg-body rounded-4 border-0 p-2 mx-auto shadow-sm notscale" style="cursor: grab;">
        <div class="p-1">
          <p class="card-title text-light"><%= task.name.capitalize %></p>
          <h6 class="card-subtitle mt-2 text-primary fs-07"><i class="fa-regular fa-calendar"></i>  <%= task.due_date %></h6>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-3 d-flex align-items-center justify-content-center">
    <div class="card-body">
      <div class="custom-control ios-switch">
        <form action="<%=task.goal.id%>/<%=task.id%>/mark" method="POST">
          <input type='hidden' name='_method' value='PATCH'/>
          <% if task.not_started? %>
            <button type='submit' class="btn btn-success col-12 rounded-pill py-2">Finish <i class="fa-solid fa-check"></i></button>
          <% else %>
            <button type='submit' class="btn btn-danger col-12 rounded-pill py-2">Not started</button>
          <% end %>
        </form>
      </div>
    </div>
  </div>
</div>
