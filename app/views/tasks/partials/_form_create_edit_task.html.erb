<div class="row justify-content-center mx-auto">

    <div class="d-flex justify-content-center">
    <% if @task.name.nil? %>
      <h3>Create a new Task</h3>
      <% else %>
      <h3>Edit Your Task</h3>
      <% end %>
    </div>

  <%= simple_form_for [@goal, @task] do |f| %>

          <div class="row p-2 rounded-5 mb-3 bg-success text-dark bg-opacity-10">
            <div class="col-1 my-auto mx-auto d-flex align-items-center">
              <i class="fa-solid fa-list-check fs-1 mx-sm-1 mx-lg-5"></i>
            </div>
            <div class="col-10 pb-2">
              <h3>Edit your Task</h3>
                <div>
                <%= f.input :name, input_html: {class:"border-0 rounded-4 p-3"}, label:false, placeholder:"Enter task tittle..." %>
                </div>
            </div>
          </div>

 <!-- Inicio cuadricula -->
        <div class="row row-cols-sm-1 row-cols-m-2  row-cols-lg-3">

          <div class="col">
            <div class="row p-2 rounded-5 g-2 mb-3 bg-success text-dark bg-opacity-10">
              <div class="col-1 my-auto mx-auto d-flex align-items-center">
                <i class="fa-solid fa-circle-exclamation fs-4"></i>
              </div>
              <div class="col-10 p-2">
                  <h3>Priority</h3>
                    <div>
                   <%= f.input :priority, collection: Task.priorities.keys, prompt: "Choose Priority", label: false, error: 'Please select one option', input_html: {class:"border-0 rounded-4"} %>
                   </div>
              </div>
            </div>
          </div>

          <div class="col">
            <div class="row p-2 rounded-5 g-2 mb-3 bg-success text-dark bg-opacity-10">
              <div class="col-1 my-auto mx-auto d-flex align-items-center">
                <i class="fa-solid fa-tag fs-4"></i>
              </div>
              <div class="col-10 p-2">
                 <h3>Difficulty</h3>
                  <div>
                     <%= f.input :difficulty, collection: Task.difficulties.keys, prompt: "Choose Difficulty", label: false, error: 'Please select one option', input_html: {class:"border-0 rounded-4"} %>
                  </div>
              </div>
            </div>
          </div>

          <% unless @task.due_date.nil? %>

          <div class="col">
            <div class="row p-2 rounded-5 g-2 mb-3 bg-success text-dark bg-opacity-10">
              <div class="col-1 my-auto mx-auto d-flex align-items-center">
                <i class="fa-solid fa-calendar-days fs-4"></i>
              </div>
              <div class="col-10 p-2">
              <h3>Due Date</h3>
                  <div>
                    <%= f.input :due_date, html5:true, input_html: {class:"border-0 rounded-4"}, label: false, placeholder:false, disabled:true %>
                  </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
  <!-- Fin cuadricula collapse -->

      <div class="row col-12 mb-3">
      <%= f.input :description, input_html: {class:"border-1 rounded-4"}, size: "60x4", label: "Description", placeholder: "  Add a more detailed description..." %>
    </div>


    <div class="row">
      <%= f.submit class:"btn btn-dark rounded-4"%>
    </div>

</div>
<% end %>
