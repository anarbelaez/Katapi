<div class="row justify-content-center">
  <div class="col-sm-12 col-md-6">
    <div class="row justify-content-center mx-auto rounded-5 shadow-lg bg-secondary p-4">

      <div class="d-flex justify-content-center">
        <h3>Create a New Task</h3>
      </div>

      <div>
        <%= simple_form_for [@goal, @task] do |f| %>

          <div class="row  m-2">
            <div class="row p-2 rounded-5 mb-2 text-primary  bg-body">
              <div class="col-1 my-auto mx-auto d-flex align-items-center">
                <i class="fa-solid fa-list-check fs-3"></i>
              </div>
              <div class="col-10 pb-2 text-light">
                <h5>Task name</h5>
                <%= f.input :name, input_html: {class:"border-0 rounded-4 p-3 bg-white"}, label:false, placeholder:"Enter task tittle..." %>
              </div>
            </div>
          </div>

          <div class="row  m-2 ">
              <div class="row p-2 rounded-5 mb-2 bg-body text-primary ">
                <div class="col-1 my-auto mx-auto d-flex align-items-center">
                  <i class="bi bi-calendar-minus fs-3"></i>
                </div>
                <div class="col-10 pb-2  text-light">
                  <h5>Select a Due Date</h5>
                  <%= f.input :due_date, html5:true, input_html: {class:"border-0 rounded-4 bg-white nice-class"}, label:false, placeholder:false %>
                </div>
              </div>
          </div>

          <div class="row  m-2 ">
              <div class="row p-2 rounded-5 mb-2 bg-body text-primary ">
                <div class="col-1 my-auto mx-auto d-flex align-items-center">
                  <i class="bi bi-compass fs-4"></i>
                </div>
                <div class="col-10 pb-2  text-light">
                   <h5>Select a goal to add your task</h5>
                    <div>
                     <%= f.association :goal, prompt: "Choose a goal", label: false, error: 'Please select one option', input_html: {class:"border-0 rounded-4 bg-white"}%>
                    </div>
              </div>
          </div>

        <div class="row m-2 p-2">
          <div class="row justify-content-center">
           <%= f.submit class:"btn btn-success rounded-4"%>
          </div>
        </div>

        <% end %>
    </div>
  </div>
</div>
