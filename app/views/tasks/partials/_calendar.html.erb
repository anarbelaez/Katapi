
<div class="row">
  <%= month_calendar events: @tasks do |date, tasks| %>
   <button class="btn btn-info btn-sm rounded-circle d-flex justify-content-center" style="width:30px" type="button" id="dateTask" data-bs-toggle="dropdown" aria-expanded="false">
      <%= date.day %>
    </button>

      <% tasks.each do |task| %>
      <div class="dropdown">
         <ul class="dropdown-menu border border-5 rounded-5 text-center" aria-labelledby="dateTask">
          <li><%= link_to "#{task.name.capitalize}", task, class:"btn btn-white" %></li>
         </ul>
      <% end %>
 <% end %>
</div>
