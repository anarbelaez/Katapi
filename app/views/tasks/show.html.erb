
<div class="row px-3 justify-content-center ">
  <div class="col-12 col-lg-8 my-3 p-2 rounded-4 bg-secondary shadow-sm">
    <h3><%= @task.name&.capitalize%></h3>
    <p class="border-bottom pb-2"><%= @task.description&.capitalize %></p>
    <p class="ff">Status: <span><%= @task.status %></span></p>
    <p class="ff">Difficulty: <span><%= @task.difficulty %></span></p>
    <p class="ff">Due date: <span><%= @task.due_date %></span></p>
    <p class="ff">Completion date: <span class="text-muted"><%= @task.completion_date %></span></p>



    <div class="row">
      <div class="col-12 d-flex">
        <div class="col-8 d-flex justify-content-start align-items-center">
          <%= link_to edit_task_path(@task), class: "text-decoration-none link-dark circle-icon me-2" do %>
            <i class="bi bi-pencil-square rounded-circle p-2 bg-primary fw-bold fs-5 shadow-sm bg-gradient"></i>
          <% end %>
          <%= link_to task_path(@task),
          class: "text-decoration-none link-dark circle-icon",
          data: { turbo_method: :delete, controller: 'sweetalert', action: "click->sweetalert#show", sweetalert_title_value: @task.name } do %>
            <i class="bi bi-trash3 rounded-circle p-2 bg-danger fw-bold fs-5 shadow-sm bg-gradient"></i>
          <% end %>


            <%= link_to goal_path(@task.goal), class: "btn btn-primary rounded-pill ms-2 text-dark" do %>
              <i class="fa-solid fa-grip"></i> Board
            <% end %>

        </div>
      </div>
      <div class="row justify-content-center pe-0">
        <div class="col-12 pe-0">
          <%= render 'tasks/partials/richtext_task' %>
        </div>
      </div>
    </div>
  </div>
</div>
