<div class="row justify-content-center mx-auto">

        <%= simple_form_for [@goal, @task] do |f| %>


          <div class="row p-2 rounded-5 mb-3 bg-success text-dark bg-opacity-10">
            <div class="col-1 my-auto mx-auto d-flex align-items-center">
              <i class="fa-solid fa-list-check fs-1 mx-sm-1 mx-lg-5"></i>
            </div>
            <div class="col-10 pb-2">
              <h3>Create a new Task</h3>
                <div>
                <%= f.input :name, input_html: {class:"border-0 rounded-4 p-3"}, label:false, placeholder:"Enter task tittle..." %>
                </div>
                 <div class="row d-flex justify-content-end">
                    <%= f.submit class:"btn btn-dark rounded-4 col-sm-4 col-lg-3"%>
                </div>
            </div>
          </div>

  <% end %>
</div>
