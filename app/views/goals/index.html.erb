<div class="mt-3 pb-1 d-flex justify-content-between align-items-center pb-3 mb-4 border-bottom col-8">
      <h3 class="m-0 p-0">Your Goals</h3>
</div>

<div class="row g-4">
  <div class="col-md-8 order-1 order-md-0">

    <div class="col-12">
      <%= render 'goals/partials/form_search' %>
    </div>

    <div class="row" data-controller="refresh-goals-list">

      <div class="col-12">
        <div class="row" data-masonry='{"percentPosition": true }' data-refresh-list-target="list">
          <%= render "goals", goals: @goals %>
        </div>

        <div class="col-12 d-flex justify-content-center my-3">
          <%= render 'goals/partials/bootstrap_nav', pagy: @pagy %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4 order-0 order-md-1">
    <div class="row">
      <div class="col-12 my-2 d-flex justify-content-center">
        <%= link_to "New Goal +", new_goal_path, class: "btn btn-primary rounded-pill col-8" %>
      </div>
    </div>
  </div>
</div>
