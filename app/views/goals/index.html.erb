
<div class="row g-4">
  <div class="col-md-8 order-1 order-md-0">
    <h3 class="pb-2 mb-3 border-bottom">Goals summary</h3>

    <div class="row g-3">

      <div class="col-sm-12 col-xl-4 my-1">
        <div class=" border rounded-4 bg1">
          <div class="row g-0 justify-content-between">
            <div class="col-6 d-flex align-items-center">
              <div class="card-body text-center">
                <h5 class="card-title text-light">To-Do</h5>
                <p class="card-text text-light">Number of tasks</p>
              </div>
            </div>

            <div class="col-6 containerpb">
              <div class="card rounded-4 border-0 p-1">
                <div class="percent" style="--clr:#00aeff;--num:85">
                  <div class="dot"></div>
                  <svg>
                      <circle cx="50" cy="50" r="50"></circle>
                      <circle cx="50" cy="50" r="50"></circle>
                  </svg>
                  <div class="number">
                      <h2>85<span>%</span></h2>
                      <p>HTML</p>
                  </div>
                </div>
              </div>
            </div>


          </div>
        </div>
      </div>


      <div class="col-sm-12 col-xl-4 my-1">
        <div class=" border rounded-4 bg1 p-1">
          <div class="row g-0 justify-content-between">
            <div class="col-6 d-flex align-items-center">
              <div class="card-body text-center">
                <h5 class="card-title text-light">To-Do</h5>
                <p class="card-text text-light">Number of tasks</p>
              </div>
            </div>

            <div class="col-6 containerpb">
              <div class="card rounded-4 border-0">
                <div class="percent" style="--clr:#ffd900;--num:65">
                  <div class="dot"></div>
                  <svg>
                      <circle cx="50" cy="50" r="50"></circle>
                      <circle cx="50" cy="50" r="50"></circle>
                  </svg>
                  <div class="number">
                      <h2>65<span>%</span></h2>
                      <p>HTML</p>
                  </div>
                </div>
              </div>
            </div>


          </div>
        </div>
      </div>

      <div class="col-sm-12 col-xl-4 my-1">
        <div class=" border rounded-4 bg1 p-1">
          <div class="row g-0 justify-content-between">
            <div class="col-6 d-flex align-items-center">
              <div class="card-body text-center">
                <h5 class="card-title text-light">To-Do</h5>
                <p class="card-text text-light">Number of tasks</p>
              </div>
            </div>

            <div class="col-6 containerpb">
              <div class="card rounded-4 border-0">
                <div class="percent" style="--clr:#04fc43;--num:50">
                  <div class="dot"></div>
                  <svg>
                      <circle cx="50" cy="50" r="50"></circle>
                      <circle cx="50" cy="50" r="50"></circle>
                  </svg>
                  <div class="number">
                      <h2>50<span>%</span></h2>
                      <p>HTML</p>
                  </div>
                </div>
              </div>
            </div>


          </div>
        </div>
      </div>

    </div>

    <div class="mt-3 pb-1 d-flex justify-content-between align-items-center border-bottom">
      <h3 class="m-0 p-0">Your Goals</h3>
    </div>

    <div class="row" data-controller="refresh-goals-list">

      <div class="col-12">
      <div class="row" data-masonry='{"percentPosition": true }' data-refresh-list-target="list">
        <% @goals.each do |goal| %>
          <div class="col-6 col-sm-4">
            <div class="">
              <%= render "goals/partials/card_goal", goal: goal %>
            </div>
          </div>
        <% end %>
      </div>


    <% @goals.each do |goal| %>
      <%= render 'goals/partials/card_goal', goal: goal %>
    <% end %>
  </div>

  <%= link_to "New Goal", new_goal_path %>
   </div>


    </div>
  </div>

  <div class="col-md-4 order-0 order-md-1">
    <div class="position-sticky" style="top: 1rem;">
      <div class="p-2 mb-3 bg-light rounded">
        <h3 class="text-center">Near the expiration date</h3>
      </div>

      <div class="p-2 mb-3 bg-light rounded">
        <% @tasks.each do |task| %>
          <%= render 'tasks/partials/card_task' , task: task %>
        <% end %>
      </div>
    </div>
  </div>
</div>
