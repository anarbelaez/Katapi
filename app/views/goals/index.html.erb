<%# Banner %>
  <div class="col-12 mb-4 pb-3 bg-body sticky-top">
<!-- Button back -->
    <div class="d-flex align-items-end me-4">
      <div class="back-btn mb-auto pt-1 me-4">
        <%= link_to :back do %>
            <i class="fa-solid fa-circle-arrow-left fs-2" class="back-btn rounded-4" data-bs-toggle="tooltip" data-bs-placement="top" title="Go Back"></i>
        <% end %>
      </div>
      <%= image_tag "goals-title.svg", class: "img-fluid", width: "130px" %>
      <div class="ms-4 d-flex justify-content-between align-items-end w-100">
        <div>
          <h2 class="fw-bold">Your trees</h2>
          <p class="m-0 "> Organize your goals and purposes! here you can see all your goals and add a new one.</p>
        </div>
        <%= link_to "Add a new goal", new_goal_path, class: "fs-08 badge bg-success text-dark text-decoration-none rounded-pill m-1 px-3 py-2" %>
      </div>
    </div>
  </div>


<div class="row g-4 pb-5 mt-3">
  <div class="col-md-12 order-1 order-md-0">

    <div class="col-12 mx-auto">
      <div class="col-12">
        <%= render 'goals/partials/form_search' %>
      </div>
    </div>
    <hr>

    <div class="row justify-content-center">
      <div class="col-12">
        <div class="row" data-masonry='{"percentPosition": true }' data-refresh-list-target="list">
          <%= render "goals", goals: @goals %>
        </div>

        <div class="col-12 d-flex justify-content-end my-3">
          <%= render 'goals/partials/bootstrap_nav', pagy: @pagy %>
        </div>
      </div>
    </div>
  </div>

</div>
