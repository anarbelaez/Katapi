<div data-refresh-goals-list-target="list">
 <% @goals.each do |goal| %>
      <div class="card border-0 bg-secondary rounded-4 mb-2 notscale ">
        <div class="card-body d-flex justify-content-between py-2">
          <div class="">
            <h6 class="fs-5"><%= link_to goal.name, goal_path(goal), class: "text-decoration-none" %></h6>
            <h6 class="fs-08">Created at: <%= date_stylized(goal.created_at) %></h6>
            <h6 class="fs-07">Number of tasks: <%= goal.tasks.count %></h6>
          </div>

          <div class="d-flex justify-content-end align-items-start pt-2">
            <%= link_to edit_goal_path(goal), class: "text-decoration-none link-dark me-2" do %>
              <i class="bi bi-pencil-square rounded-circle p-1 bg-primary shadow-sm bg-gradient"></i>
            <% end %>
            <%= link_to edit_goal_path(goal), class: "text-decoration-none link-dark" do %>
              <i class="bi bi-trash3 rounded-circle p-1 bg-danger shadow-sm bg-gradient"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
</div>
