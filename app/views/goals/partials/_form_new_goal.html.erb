<div class="row  justify-content-center">
  <div class="col-sm-12 col-md-6">
    <div class="row justify-content-center mx-auto rounded-5 shadow-lg bg-secondary p-4">
      <!-- Button back -->
    <div class="back-btn">
      <%= link_to  :back do%>
          <i class="fa-solid fa-circle-arrow-left fs-5" class="back-btn rounded-4" data-bs-toggle="tooltip" data-bs-placement="top" title="Go Back"></i>
      <% end %>
    </div>

      <div class="d-flex justify-content-center">
        <% if @goal.name.nil? %>
        <h3>Create a New Goal</h3>
        <% else %>
        <h3>Edit Your Goal</h3>
        <% end %>
      </div>

      <div>
        <%= simple_form_for @goal do |f| %>

          <div class="row  m-2">
            <div class="row p-2 rounded-5 mb-3 text-primary  bg-body">
              <div class="col-1 my-auto mx-auto d-flex align-items-center">
                <i class=" bi bi-compass fs-2"></i>
              </div>
              <div class="col-10 pb-2 text-light">
                <h5>Goal title</h5>
                <%= f.input :name, input_html: {class: "border-0 rounded-4 bg-white"},
                                              placeholder: "Enter goal title...", label:false %>
              </div>
            </div>
          </div>

          <div class="row  m-2 ">
              <div class="row p-2 rounded-5 mb-3 bg-body text-primary ">
                <div class="col-1 my-auto mx-auto d-flex align-items-center">
                  <i class="fa-solid fa-tag fs-2"></i>
                </div>
                <div class="col-10 pb-2  text-light">
                  <h5>Goal category</h5>
                    <%= f.input :category, input_html: {class: "border-0 rounded-4 bg-white"},
                                                        placeholder: "Enter category to your goal...", label:false %>
                </div>
              </div>
          </div>

          <div class="row col-12 mb-3">
            <%= f.input :description, input_html: {class:"border-1 rounded-4 text-light m-0"}, size: "60x4", label: "Description", placeholder: "  Add a more detailed description..." %>
          </div>

        <div class="row m-2 p-2">
          <div class="row justify-content-center">
            <%= f.submit class:"btn btn-success rounded-4"%>
          </div>
        </div>

        <% end %>
    </div>
  </div>
</div>
