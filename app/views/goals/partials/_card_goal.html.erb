<%= link_to goal_path(goal), class:"text-decoration-none text-dark active" do %>
  <div class="card bg-secondary my-2 rounded-4 border-0 shadow-sm" style="">
    <img src="https://i.pinimg.com/564x/f2/52/fa/f252fa96c51dd1cb0ac71f85858632db.jpg" class="card-img-top rounded-bottom rounded-4 " alt="arbol">
    <div class="card-body text-light">
      <h5 class="card-title fs-6"><%= title_stylized(goal.name).capitalize %></h5>
      <h6 class="card-text text-muted fs-08 my-1"><span class="badge fs-09 text-bg-primary rounded-pill"><%= goal.category.capitalize %></span></h6>
      <div class="d-flex align-items-center">
        <%# <div class="progress w-75">
          <div class="progress-bar bg-info" role="progressbar" aria-label="Basic example" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <p class="m-0 ms-3 text-center">25%</p> %>
      </div>
    </div>
  </div>
<% end %>
