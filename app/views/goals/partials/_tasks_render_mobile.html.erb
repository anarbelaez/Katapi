<div class="row d-block d-md-none m-2">
  <h5>Not started</h5>
  <div class="col-12 bg-secondary py-2 rounded-4">
      <% tasks.not_done.each do |task| %>
      <div class="col-12 d-flex my-3 justify-content-center">
        <%= render 'tasks/partials/card_responsive', task: task %>

      </div>
      <% end %>
  </div>

  <h5 class="mt-3">Done</h5>
  <div class="col-12 bg-secondary py-2  rounded-4">
      <% tasks.done.each do |task| %>
      <div class="col-12 bg-secondary my-3 d-flex justify-content-center">
        <%= render 'tasks/partials/card_responsive', task: task %>
      </div>
      <% end %>
  </div>
</div>
