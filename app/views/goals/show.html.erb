<%# Tabs %>
<div class="">
<ul class="nav nav-tabs border-0 bg-transparent" id="myTab" role="tablist">

  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="board-goal-tab" data-bs-toggle="tab" data-bs-target="#board-goal-tab-pane" type="button" role="tab" aria-controls="board-goal-tab-pane" aria-selected="true"><i class="fa-solid fa-grip"></i>Board</button>
  </li>

  <li class="nav-item" role="presentation">
    <button class="nav-link" id="details-goals-tab" data-bs-toggle="tab" data-bs-target="#details-goals-tab-pane" type="button" role="tab" aria-controls="details-goals-tab-pane" aria-selected="false"><i class="opacity-75 bi bi-compass"></i>Notes</button>
  </li>
</ul>
</div>


<div class="row ps-3 pe-4 mt-3">
  <div class="col-12 col-md-9 rounded-4 p-3">
    <div class="">
      <h3 class="text-light fw-bold"><%= @goal.name %></h3>
      <h5 class="display-6 px-2 badge fs-09 bg-success rounded-pill text-dark"><%= @goal.category %></h5>
      <p class="text-muted"><%= @goal.description || "Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Donec qu" %></p>
      <div class="d-flex justify-content-end align-items-center">
        <%= link_to edit_goal_path(@goal), class: "text-decoration-none link-dark circle-icon me-2" do %>
          <i class="bi bi-pencil-square rounded-circle p-2 bg-primary fw-bold fs-5 shadow-sm bg-gradient"></i>
        <% end %>
        <%= link_to edit_goal_path(@goal), class: "text-decoration-none link-dark circle-icon" do %>
          <i class="bi bi-trash3 rounded-circle p-2 bg-danger fw-bold fs-5 shadow-sm bg-gradient"></i>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-3 rounded-4 p-3 bg-secondary">
    <div class="text-center">
      <div class="d-flex justify-content-around align-items-center">
        <div class="d-flex flex-column">
          <div class="p-2 bg-info rounded-4 shadow-sm" style="width: 4rem"><span class="display-6">15</span></div>
          <p class="my-1 fst-italic">Days</p>
        </div>
        <div class="d-flex flex-column">
          <div class="p-2 bg-info rounded-4 shadow-sm" style="width: 4rem"><span class="display-6">5</span></div>
          <p class="my-1 fst-italic">Hours</p>
        </div>
        <div class="d-flex flex-column">
          <div class="p-2 bg-info rounded-4 shadow-sm" style="width: 4rem"><span class="display-6">15</span></div>
          <p class="my-1 fst-italic">Minutes</p>
        </div>
      </div>
      <p class="py-3 m-0 fs-4 text-light border-bottom fw-bold"><%= @goal.completion_date || "November 11, 2022" %></p>
    </div>
  </div>
</div>









<%# Tabs Content %>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="board-goal-tab-pane" role="tabpanel" aria-labelledby="board-goal-tab" tabindex="0">
    <div class="p-3">
      <%= render 'tasks/partials/board_task_cards' %>
    </div>
  </div>

  <div class="tab-pane fade" id="details-goals-tab-pane" role="tabpanel" aria-labelledby="details-goals-tab" tabindex="0">
    <div class="p-3">

    <%# Izquierda %>
    <div class="row g-3">
      <div class="col-12">

      <div class="rounded-4">
      </div>
        <div class="position-relative bg-secondary text-center border-0 p-3">
          <h6 class="fs-2 fst-italic">Notes</h6>
          <%# <div class="position-absolute clip-rich-text"><i class="bi bi-paperclip display-4 text-success"></i></div> %>
        </div>
        <div class="card border-0 bg-secondary text-light px-4 py-3 notscale">
          <%= simple_form_for @goal, class: "" do |f| %>
            <%= f.rich_text_area :review, as: :file, input_html: { class: "shadow-sm customized-min-height" } %>
            <div class="d-flex justify-content-end pt-2">
              <%= f.submit "Save note", class:"btn btn-link link-light border-bottom border-2 text-decoration-none p-1"%>
            </div>
          <% end %>
        </div>

      </div>
    </div>

    </div>
  </div>
</div>
