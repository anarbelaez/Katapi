<h1><%= @goal.name %></h1>
<h3><%= @goal.category %></h3>
<h3><%= @goal.maturity %></h3>
<h3><%= @goal.completion_date %></h3>
<p><%= @goal.description %></p>

<%= link_to "Edit goal", edit_goal_path %>

<%=  link_to "Delete", goal_path(@goal),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

<% @goal.tasks.each do |task| %>
  <%= render 'shared/task/card_task', task: task %>
<% end %>
