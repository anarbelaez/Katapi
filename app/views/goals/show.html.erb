<%# Tabs %>
<div class="">
<ul class="nav nav-tabs border-0 bg-transparent" id="myTab" role="tablist">

  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="board-goal-tab" data-bs-toggle="tab" data-bs-target="#board-goal-tab-pane" type="button" role="tab" aria-controls="board-goal-tab-pane" aria-selected="true"><i class="fa-solid fa-grip"></i></button>
  </li>

  <li class="nav-item" role="presentation">
    <button class="nav-link" id="details-goals-tab" data-bs-toggle="tab" data-bs-target="#details-goals-tab-pane" type="button" role="tab" aria-controls="details-goals-tab-pane" aria-selected="false"><i class="opacity-75 bi bi-compass"></i></button>
  </li>
</ul>
</div>

<%# Tabs Content %>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="board-goal-tab-pane" role="tabpanel" aria-labelledby="board-goal-tab" tabindex="0">
    <div class="p-3">
      <%= render 'tasks/partials/board_task_cards' %>
    </div>
  </div>

  <div class="tab-pane fade" id="details-goals-tab-pane" role="tabpanel" aria-labelledby="details-goals-tab" tabindex="0">
    <div class="p-3">

    <div class="card card-body rounded-4 my-3 bg-dark">
      <%= simple_form_for @goal do |f| %>
        <%= f.rich_text_area :review, as: :file, input_html: {class:"border-0 rounded-4"}  %>
        <div class="d-flex justify-content-end pt-2">
          <%= f.submit class:"btn btn-dark rounded-pill"%>
        </div>
      <% end %>
    </div>



    </div>
  </div>
</div>
