<style>

.bg {
background: rgb(215,255,231);
background: linear-gradient(315deg, rgba(215,255,231,1) 0%, rgba(172,243,255,1) 88%);  background-position: center;
  background-size: cover;
  height: 100vh;
  width: 100vw;
  position: fixed;
  /* z-index usage is up to you.. although there is no need of using it because the default stack context will work. */
  z-index: -1;
}


/* .content{
  position: absolute;
  margin-top: 3rem;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
} */

.glass {
  /* From https://css.glass */
background: rgba(255, 255, 255, 0.2);
border-radius: 16px;
box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
backdrop-filter: blur(5px);
-webkit-backdrop-filter: blur(5px);
border: 1px solid rgba(255, 255, 255, 0.3);
}

</style>

<div class="bg"></div>
<div class="container py-5 d-flex align-items-center" style="height: 100vh">
  <div class="row justify-content-center align-middle mx-auto">
    <div class="card border-0 px-5 py-3 rounded-4" style="max-width: 45rem;">
      <div class="card-body">
        <h1 class="card-title fw-bold text-center">Katapi</h1>
        <h6 class="card-subtitle my-4 text-muted text-center">Login in to Katapi</h6>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          placeholder: "Enter email",
                          input_html: { autocomplete: "email", class: "rounded-4 shadow-none border-0" },
                          label_html: { class: "text-muted", style: "font-size: 0.8rem;" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", class: "rounded-4 shadow-none border-0" },
                          label_html: { class: "text-muted", style: "font-size: 0.8rem;" } %>
              <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="text-end">
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-decoration-none fw-bold fs-08 link-muted" %>
            </div>

            <div class="form-actions mt-4">
              <%= f.button :submit, "Sign in", class: "rounded-4 btn btn-sm btn-info w-100 bg-gradient" %>
            </div>
          <% end %>

          <div class="text-center">
            <p class="card-subtitle my-4 text-muted fs-08">Or continue with</p>
            <%= link_to "#", class: "bg-light border-bottom border-end shadow-sm p-3 rounded-4" do %>
              <%= image_tag "google.png", class: "", style: "width: 25px" %>
            <% end %>
          </div>

          <div class="mt-4 pt-2">
            <p class="card-text fs-08 fw-bold text-muted">Don't have an account yet?
              <%= link_to "Sign up", new_registration_path(resource_name), class: "text-decoration-none fw-bold" %>
            </p>
          </div>


      </div>
    </div>
  </div>
</div>


