<div class="bg d-none d-sm-block"></div>
<div class="container py-4 d-flex align-items-center" style="">
  <div class="row justify-content-center align-middle mx-auto">
    <h1 class="fw-bold d-none d-sm-block text-center text-light my-3 display-4">Katapi</h1>
    <div class="card border-0 px-3 py-3 mt-3 rounded-4" style="max-width: 45rem;">
      <div class="card-body">
        <h1 class="card-title d-block d-sm-none fw-bold text-center my-3 mb-4 display-4">Katapi</h1>
        <h4 class="card-subtitle mb-2 text-center">Login to Katapi</h4>
        <div class="d-block d-sm-none text-center my-5">
          <%= image_tag "hands-bomb.png", class: "img-fluid w-50" %>
        </div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          placeholder: "Enter your email",
                          input_html: { autocomplete: "email", class: "rounded-4 shadow-sm border-0 bg-light py-2" },
                          label_html: { class: "text-muted fs-08" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", class: "rounded-4 shadow-sm border-0 bg-light py-2" },
                          label_html: { class: "text-muted fs-08" } %>
              <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="text-end">
              <%= link_to "I forgot my password", new_password_path(resource_name), class: "text-decoration-none fw-bold fs-08 link-muted" %>
            </div>

            <div class="form-actions mt-4">
              <%= f.button :submit, "Sign in", class: "rounded-4 btn btn-sm btn-info w-100 bg-gradient" %>
            </div>
          <% end %>

          <div class="text-center">
            <p class="card-subtitle my-4 text-muted fs-08">Or continue with</p>
            <div class="bg-light border-bottom border-end pt-2 pb-1 shadow-sm rounded-4 mx-auto col-2">
              <%= render "devise/shared/oauth_form", class: ""  %>
            </div>
          </div>

          <div class="mt-4 p-2">
            <p class="card-text fs-08 fw-bold text-muted text-center">Don't have an account yet?
              <%= link_to "Sign up", new_registration_path(resource_name), class: "text-decoration-none fw-bold" %>
            </p>
          </div>


      </div>
    </div>
  </div>
</div>

