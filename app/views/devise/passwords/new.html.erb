<div class="bg d-none d-sm-block"></div>
<div class="container py-4 d-flex align-items-center g-0" style="">
  <div class="row justify-content-center align-middle mx-auto text-light">
    <%# <h1 class="card-title fw-bold mt-3 mb-4 text-center">Katapi</h1> %>
    <h1 class="fw-bold d-none d-sm-block text-center text-light my-3 display-4">Katapi</h1>
    <div class="card glass notscale border-0 px-4 py-3 mt-3 rounded-4" style="max-width: 25rem;">
      <div class="card-body">
        <h1 class="card-title d-block d-sm-none fw-bold text-center my-3 display-4">Katapi</h1>
        <h4 class="card-subtitle mb-2 text-center">Forgot your password?</h4>
        <div class="d-block d-sm-none text-center my-5">
          <%= image_tag "tree_swing_girl.svg", class: "img-fluid w-50" %>
        </div>
        <h6 class="card-subtitle fs-08 my-4 text-center opacity-75">Don't worry! Enter your email adress and we will send you instructions to reset your password</h6>
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email,
                          autofocus: true,
                          placeholder: "Enter your email",
                          input_html: { autocomplete: "email", class: "form-control-light rounded-4 shadow-sm border-0 py-3" },
                          label_html: { class: "d-none" } %>
            </div>

            <div class="form-actions pt-2 pb-2 text-center">
              <%= f.button :submit, "Submit", class: "rounded-4 btn btn-sm btn-success w-100 py-2" %>
            </div>
          <% end %>

          <hr class="border-white">

          <div class="pt-1">
            <p class="card-text fs-08 fw-bold text-muted text-center">
              <%= link_to "Back to Login", new_session_path(resource_name), class: "text-decoration-none fw-bold" %>
            </p>
          </div>


      </div>
    </div>
  </div>
</div>
