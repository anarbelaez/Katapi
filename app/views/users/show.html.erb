<%# User Banner %>
<div class="ps-3 ps-md-5 pt-4 pb-3 mb-3 text-muted bg-secondary shadow-sm rounded-bottom rounded-4">
  <div class="d-flex align-items-end">
      <%= image_tag get_avatar_url, class: "avatar avatar-xxl img-fluid"%>
      <div class="px-3 py-3">
        <% if user_has_name? %>
          <p class="m-0 ms-1 fs-4 fw-bold"><%= @user.full_name %></p>
          <p class="m-0 ms-1 opacity-75"><%= @user.nickname %></p>
        <% else %>
          <p class="m-0 ms-1 fs-4 fw-bold"><%= @user.email %></p>
        <% end %>
      </div>
    </div>
</div>

<%# Tabs %>
<ul class="nav nav-tabs border-0" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="overview-tab" data-bs-toggle="tab" data-bs-target="#overview-tab-pane" type="button" role="tab" aria-controls="overview-tab-pane" aria-selected="true">
      <i class="bi bi-bar-chart-line d-md-none"></i>
      <span class="d-none d-md-block">Overview</span>
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="notifications-tab" data-bs-toggle="tab" data-bs-target="#notifications-tab-pane" type="button" role="tab" aria-controls="notifications-tab-pane" aria-selected="false">
      <i class="bi bi-activity d-md-none"></i>
      <span class="d-none d-md-block">Activity</span>
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="edit-profile-tab" data-bs-toggle="tab" data-bs-target="#edit-profile-tab-pane" type="button" role="tab" aria-controls="edit-profile-tab-pane" aria-selected="false">
      <i class="bi bi-person d-md-none"></i>
      <span class="d-none d-md-block">Account Settings</span>
    </button>
  </li>
</ul>

<%# Tabs Content %>
<div class="tab-content bg-secondary" id="myTabContent">
  <div class="tab-pane fade show active" id="overview-tab-pane" role="tabpanel" aria-labelledby="overview-tab" tabindex="0">
    <div class="p-3">
      <p>TODO: General Stats</p>
    </div>
  </div>

  <div class="tab-pane fade" id="notifications-tab-pane" role="tabpanel" aria-labelledby="notifications-tab" tabindex="0">
    <div class="p-3">
      <p>TODO: Notifications</p>
    </div>
  </div>
  <div class="tab-pane fade" id="edit-profile-tab-pane" role="tabpanel" aria-labelledby="edit-profile-tab" tabindex="0">
    <div class="p-3">
      <%= render "devise/registrations/edit" %>
    </div>
  </div>
</div>
