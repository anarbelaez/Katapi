<div class="row g-4">
  <div class="col-md-8 order-1 order-md-0">
    <h5 class="pb-2 mb-3 border-bottom">Goals summary</h5>

    <div class="row g-3">
      <div class="col-7 col-sm-3">
        <div class="bg-warning">Lorem ipsum dolor sit amet consectetur.</div>
      </div>

      <div class="col-5 col-sm-6">
        <div class="row g-3">
          <div class="col-12 col-sm-6">
            <div class="bg-warning">Lorem ipsum dolor sit amet consectetur.</div>
          </div>

          <div class="col-12 col-sm-6">
            <div class="bg-warning">Lorem ipsum dolor sit amet consectetur.</div>
          </div>
        </div>
      </div>
    </div>

    <%# Aqui el buscador %>
    <div class="col-12">
      <h5>Search Bar TODO</h5>
    </div>

    <%# Aqui se renderizan las goals %>
    <div class="mt-3 pb-1 d-flex justify-content-between align-items-center border-bottom">
      <h5 class="m-0 p-0">Goals</h5>
      <%= link_to "See all", goals_path, class: "text-decoration-none" %>
    </div>

    <div class="row" data-controller="refresh-goals-list">

      <div class="col-12">
      <div class="row" data-masonry='{"percentPosition": true }' data-refresh-list-target="list">
        <% @goals.each do |goal| %>
          <div class="col-6 col-sm-4">
            <div class="">
              <%= render "goals/partials/card_goal", goal: goal %>
            </div>
          </div>
        <% end %>
      </div>


      </div>


